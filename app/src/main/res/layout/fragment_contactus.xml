<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backk"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        tools:context=".Activity.Testingg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="#FFF"
         android:textSize="8pt"
         android:layout_weight="1"
         android:text="FirstName"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="#FFF"
         android:textSize="8pt"
         android:layout_marginLeft="3dp"
         android:text="LastName"/>
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:weightSum="2"
       android:layout_margin="5dp"
       android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/yy"
        android:orientation="horizontal">

     <EditText
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:layout_margin="5dp"
         android:maxLines="1"
         android:textColor="#FFF"
         android:id="@+id/editfrstname"
         android:textColorHint="#AAA4A4"
         android:background="@null"
         android:cursorVisible="true"
         android:textCursorDrawable="@drawable/color_cursor"
         android:hint="FirstName" />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/yy"
         android:layout_weight="1"
         android:layout_marginTop="3dp"
         android:layout_margin="5dp"
         android:orientation="horizontal">
      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:maxLines="1"
          android:id="@+id/editlastname"
          android:textColor="#FFF"
          android:textColorHint="#AAA4A4"
          android:layout_margin="5dp"
          android:cursorVisible="true"
          android:textCursorDrawable="@drawable/color_cursor"
          android:background="@null"
          android:hint="LastName" />
       </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="8pt"
            android:layout_margin="5dp"
            android:text="Email Address"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yy"
            android:layout_margin="5dp"
            android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#FFF"
            android:textColorHint="#AAA4A4"
            android:layout_margin="5dp"
            android:background="@null"
            android:id="@+id/editemail"
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/color_cursor"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="abc@xyz.com" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="8pt"
            android:layout_margin="5dp"
            android:text="Phone No"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yy"
            android:layout_margin="5dp"
            android:orientation="horizontal">
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:maxLines="1"
           android:textColor="#FFF"
           android:textColorHint="#AAA4A4"
           android:layout_margin="5dp"
           android:inputType="number"
           android:maxLength="12"
           android:id="@+id/editphoneno"
           android:background="@null"
           android:cursorVisible="true"
           android:textCursorDrawable="@drawable/color_cursor"
           android:hint="Enter phone no" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="8pt"
            android:layout_margin="5dp"
            android:text="Description "/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yy"
            android:layout_margin="5dp"
            android:orientation="horizontal">
      <EditText
          android:layout_width="match_parent"
          android:gravity="top"
          android:textColor="#FFF"
          android:textColorHint="#AAA4A4"
          android:layout_height="80dp"
          android:id="@+id/editdesc"
          android:inputType="text|textMultiLine"
          android:layout_margin="5dp"
          android:background="@null"
          android:cursorVisible="true"
          android:textCursorDrawable="@drawable/color_cursor"
          android:hint="Enter your description" />
        </LinearLayout>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#FFF"
          android:textSize="8pt"
          android:layout_margin="5dp"
          android:text="Upload your  traffic ticket "/>
      <ImageView
          android:id="@+id/header_cover_image"
          android:layout_width="200dp"
          android:layout_height="110dp"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:layout_margin="5dp"
          android:layout_gravity="center"
          android:layout_below="@+id/textt"
          android:src="@drawable/thumbnail"
          app:srcCompat="@drawable/thumbnail" />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:textColor="#FFF"
          android:layout_margin="5dp"
          android:id="@+id/next"
          android:background="@drawable/hireusbutton"
          android:text="Send"/>
    </LinearLayout>
</ScrollView>